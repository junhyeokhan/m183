@model List<PostViewModel>

<h1 class="title">
    Home
</h1>

@if (Model.Count > 0)
{
    foreach (PostViewModel postViewModel in Model)
    {
        Html.RenderPartial("~/Views/Shared/_Post.cshtml", postViewModel);
    }
}
else
{
    <div class="block long">
        <p>There is no post yet in this site. Why don't you be the first one?</p>
    </div>
}