@model UserViewModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", null, FormMethod.Post, new { @class = "pure-form pure-form-stacked" }))
{
    <span class="pure-form-message-inline">@Html.ValidationSummary()</span>

    <div class="pure-control-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
    </div>
    <div class="pure-control-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
        @Html.PasswordFor(m => m.RepeatedPassword, new { placeholder = "Repeat password" })
    </div>
    <input class="pure-button pure-button-primary" type="submit" name="submit" value="Login" />
}
